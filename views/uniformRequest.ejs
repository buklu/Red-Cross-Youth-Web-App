<%-include ("partials/header.ejs") %> 
<%-include ("partials/formsNav.ejs") %> 
<!-- ======= Breadcrumbs ======= -->
<section class="breadcrumbs">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">        
        <ol>
          <li><a href="/docs">Go Back</a></li>
          <li>Uniform Request</li>
        </ol>
      </div>
    </div>
  </section>
<!-- End Breadcrumbs -->
  <section class="inner-page">
    <div class="container">
      <div class="row">
        <div class="col-md-8 order-md-1">
       <form class="needs-validation" novalidate="" action="/act/addUnifReq" method="post">
        <h4>Uniform Request Form</h4>          
          <div class="row d-flex mb-4">          
            <div class="col-md-3">
              <label for="dateReceived">Date Requested:</label>
              <input type="date" class="form-control" name="dateReceived" placeholder="" value="" required="">
            </div>
          </div>

          <div class="row d-flex mb-4">
            <div class="col-md">
              <label for="volunteer">Name of Requesting Volunteer</label>
              <input type="text" class="form-control" name="volunteer" placeholder="" value="" required="">              
            </div>
            <div class="col-md">
              <label for="activity">Name of Council</label>
              <select type="text" class="form-control" name="council" required>
                  <option value="#id"><%=nav.name%></option>
              </select>
            </div>
          </div>

          <div class="row mb-4">
            <div class="col-md-1">
              <label for="rcys">Type</label>
              <select class="form-control" name="type">
                <option value="A">A</option>
                <option value="C">C</option>
              </select>
            </div>
            <div class="col-md-2">
              <label for="rcys">Quantity</label>
              <input type="number" class="form-control" id="qty" name="qty" required>
            </div>
            <div class="col-md-1">
              <label for="rcys">Size</label>            
              <select class="form-control" name="size">
                <option value="XS">XS</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
              </select>
            </div>
            <div class="col-md-1">
              <label for="rcys">RCY</label>
              <input type="radio" name="design" placeholder="" value="0" required>              
            </div>
            <div class="col-md-1">
              <label for="rcys">Advisor</label>
              <input type="radio" name="design" placeholder="" value="1" required>
            </div>
          </div>

          <hr class="mb-4">
          <button type='submit' class="btn btn-danger btn-lg btn-block text-white">Post</button>
        </form>
          <a href="/docs">Back</a>
        </div>
      </div>
    </div>
  </section>
<%-include ('partials/footer.ejs')%>